<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color_blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/arrow" >

            <TextView
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资产名称："
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/label2"
                android:text="未知"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/label2"
                android:layout_below="@+id/label2"
                android:paddingTop="5dp"
                android:text="RFID："
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/rfid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/label"
                android:layout_toRightOf="@+id/label"
                android:text="未知"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/label"
                android:layout_toRightOf="@+id/rfid"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="责任人："
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/keeper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/label3"
                android:layout_toRightOf="@+id/label3"
                android:text="未知"
                android:textColor="#000000"
                android:textSize="15dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/xiangxi_07" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color_blue" />

</LinearLayout>