<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#5aa1d7" >

        <include layout="@layout/btnclick_layout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="盘点结果"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/pyxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/tianjia_03"
            android:clickable="true"
            android:onClick="btnClick" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="30dp"
                    android:text="计划名称"
                    android:textColor="#000000"
                    android:textSize="30dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp" >

                <View
                    android:id="@+id/lineLeft"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:background="#000000" />

                <View
                    android:id="@+id/lineRight"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_alignParentRight="true"
                    android:background="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="盘点人："
                    android:textColor="#000000"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/keeper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label"
                    android:text="张三"
                    android:textColor="#000000"
                    android:textSize="30dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp" >

                <RelativeLayout
                    android:id="@+id/dateLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/date"
                        android:text="盘点日期："
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/label"
                        android:text="2015-05-23"
                        android:textColor="#000000"
                        android:textSize="30dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/planNum"
                        android:text="计划总数："
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/planNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/label"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="30dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/yipanBtn"
                    android:layout_width="170dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/selector_yipan"
                    android:clickable="true"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/yipanTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已盘：0"
                        android:textColor="@color/yipanColor"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/weipanBtn"
                    android:layout_width="170dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/selector_weipan"
                    android:clickable="true"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/weipanTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未盘：0"
                        android:textColor="@color/weipanColor"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/panyingBtn"
                    android:layout_width="170dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/selector_panying"
                    android:clickable="true"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/panyingTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="盘盈：0"
                        android:textColor="@color/panyingColor"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pankuiBtn"
                    android:layout_width="170dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/selector_pankui"
                    android:clickable="true"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/pankuiTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="盘亏：0"
                        android:textColor="@color/pankuiColor"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomBtnGroup"
        android:layout_width="match_parent"
        android:layout_height="80dp" >

        <LinearLayout
            android:id="@+id/start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_kaishisaomiao"
            android:clickable="true"
            android:gravity="center"
            android:onClick="btnClick"
            tools:ignore="Orientation" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始扫描"
                android:textColor="#ffffff"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_wanchengjihua"
            android:clickable="true"
            android:gravity="center"
            android:onClick="btnClick"
            tools:ignore="Orientation" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成计划"
                android:textColor="#ffffff"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shujutongbu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_shujutongbu"
            android:clickable="true"
            android:onClick="btnClick"
            android:visibility="gone"
            tools:ignore="Orientation" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>